<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user_info', user: @book.user %>
      <%= render 'books/new_book', book: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to(user_path(@book.user.id)) do %>
                <%= attachment_image_tag @book.user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size:"100x100" %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book.id) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger", data: {confirm: "本当に消しますか？"} %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>